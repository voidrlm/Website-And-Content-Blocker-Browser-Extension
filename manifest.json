{
  "name": "Website Blocker",
  "description": "Block websites at ease.",
  "action": {
    "default_popup": "popup.html"
  },
  "manifest_version": 3,
  "author": "voidrlm",
  "version": "0.1",
  "permissions": ["declarativeNetRequest", "storage", "activeTab"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "48": "icon.png"
  }
}
